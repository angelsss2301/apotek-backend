generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model jenis {
  id    String @id
  jenis String
}

model obat {
  id              String            @default(uuid()) @id
  nama            String
  jenis           String
  satuan          String
  harga           Int
  created_at      DateTime          @default(now())
  stock           Int
  transaksikeluar transaksikeluar[]
  transaksimasuk  transaksimasuk[]
}

model satuan {
  id     String @id
  satuan String
}

model transaksikeluar {
  id         String   @id @default(uuid())
  obatId     String
  jumlah     Int
  created_at DateTime @default(now())
  obat       obat     @relation(fields: [obatId], references: [id], map: "TransaksiKeluar_obatId_fkey")

  @@index([obatId], map: "TransaksiKeluar_obatId_fkey")
}

model transaksimasuk {
  id         String   @id @default(uuid())
  obatId     String
  jumlah     Int
  created_at DateTime @default(now())
  obat       obat     @relation(fields: [obatId], references: [id], map: "TransaksiMasuk_obatId_fkey")

  @@index([obatId], map: "TransaksiMasuk_obatId_fkey")
}
